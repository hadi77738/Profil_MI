{
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
  "rewrites": [
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1"
    },
    {
      "source": "/(.*\\.php)",
      "destination": "/api$1"
    },
    {
      "source": "/",
      "destination": "/api/index.php"
    }
  ]
}
